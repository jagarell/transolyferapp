<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/transolyfer_logo"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:padding="5dp"/>

    <net.transolyfer.transolyfergo.app.ui.components.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray1"
        android:text="@string/splash_title_version"
        android:layout_toLeftOf="@+id/tvVersion"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>
    <net.transolyfer.transolyfergo.app.ui.components.CustomTextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray1"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"/>

</RelativeLayout>